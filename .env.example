# Geral
PHOTOS_PER_BOOK=2
RAW_DIR=photos_raw
GROUPED_DIR=photos_grouped
TZ=Europe/Lisbon

# -------- DB (Supabase Postgres) --------
# Formato de URL: postgresql+psycopg://USER:PASSWORD@HOST:PORT/DBNAME
DB_URL=postgresql+psycopg://postgres:postgres@db.xxx.supabase.co:5432/postgres

# -------- Supabase Storage (opcional mas recomendado) --------
SUPABASE_URL=
# Para uploads server-side usa a Service Role (mais permissões) -> guarda em segurança!
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_BUCKET=books

# OpenAI (para visão/descrição – ligar depois)
OPENAI_API_KEY=

# Vinted (credenciais)
VINTED_EMAIL=
VINTED_PASSWORD=
VINTED_LOCATION=
VINTED_SHIPPING=

# Preços (margem negoc.)
PRICE_MIN=10
PRICE_MARGIN_EUR=2

# Vision (upload temporário)
VISION_MAX_IMAGES=2
VISION_UPLOAD_PREFIX=vision
VISION_SIGNED_URL_TTL=300     # segundos (5 min)
VISION_MAX_SIDE=1280          # redimensionar lado maior antes do upload
VISION_JPEG_QUALITY=85

